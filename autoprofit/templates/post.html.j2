<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ post.title }}</title>
    <style>
      :root {
        --bg: #fffdf8;
        --text: #111827;
        --accent: #047857;
      }
      body {
        font-family: "Palatino Linotype", "Book Antiqua", serif;
        background: linear-gradient(180deg, #ecfeff, var(--bg));
        color: var(--text);
        margin: 0;
      }
      main {
        max-width: 820px;
        margin: 0 auto;
        padding: 48px 20px 80px;
      }
      .cta {
        border: 2px solid var(--accent);
        border-radius: 12px;
        padding: 14px;
        margin: 26px 0;
        background: #f0fdf4;
      }
      .cta a,
      .cta button {
        display: inline-block;
        background: var(--accent);
        color: #fff;
        text-decoration: none;
        padding: 10px 16px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
      }
      .notice {
        font-size: 0.92rem;
        background: #fef3c7;
        border-left: 4px solid #d97706;
        padding: 10px 12px;
      }
      .premium-row {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        align-items: center;
      }
      .premium-row input {
        flex: 1;
        min-width: 240px;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #93c5fd;
      }
      .premium-msg {
        margin-top: 8px;
        font-size: 0.92rem;
      }
    </style>
  </head>
  <body>
    <main>
      <article>
        <h1>{{ post.title }}</h1>
        <p>{{ post.summary }}</p>

        <p class="notice">{{ disclosure }}</p>

        {% for heading, body in post.sections %}
          <section>
            <h2>{{ heading }}</h2>
            <p>{{ body }}</p>
          </section>
        {% endfor %}

        <section class="cta">
          <h2>{{ offer.name }}</h2>
          <p>Click-through tracking URL for optimization:</p>
          <p><a href="{{ api_base_url }}/go/{{ post.slug }}">{{ offer.cta_text }}</a></p>
          <p><small>Direct destination (debug): <a href="{{ offer_url }}">{{ offer_url }}</a></small></p>
        </section>

        {% if stripe_enabled %}
          <section class="cta">
            <h2>Premium Automation Reports</h2>
            <p>Subscribe for weekly profitable keyword packs and performance playbooks.</p>
            <form id="premium-form">
              <div class="premium-row">
                <input id="premium-email" type="email" placeholder="you@example.com" required />
                <button type="submit">Start Subscription</button>
              </div>
            </form>
            <p class="premium-msg" id="premium-msg"></p>
          </section>
        {% endif %}
      </article>
    </main>

    {% if stripe_enabled %}
      <script>
        (function () {
          var form = document.getElementById("premium-form");
          if (!form) {
            return;
          }
          var emailInput = document.getElementById("premium-email");
          var message = document.getElementById("premium-msg");
          form.addEventListener("submit", async function (event) {
            event.preventDefault();
            message.textContent = "Generating secure checkout link...";
            try {
              var response = await fetch("{{ api_base_url }}/api/stripe/checkout", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: emailInput.value })
              });
              var payload = await response.json();
              if (!response.ok || !payload.checkout_url) {
                throw new Error(payload.detail || "Checkout is temporarily unavailable.");
              }
              window.location.href = payload.checkout_url;
            } catch (error) {
              message.textContent = error.message || "Unable to start checkout.";
            }
          });
        })();
      </script>
    {% endif %}
  </body>
</html>
